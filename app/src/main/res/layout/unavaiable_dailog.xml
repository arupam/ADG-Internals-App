<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@drawable/unavailback">


    <TextView
        android:id="@+id/alertcardtext1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sfpro"
        android:text="iOS Meeting"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertcardtext2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/sfpro"
        android:text="10 August 2020, 09:00 PM"
        android:textColor="#2C5FE2"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/sfpro"
        android:text="Unavailable"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/sfpro"
        android:text="Reason"
        android:textColor="#FFFFFF"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/edit_text_reason"
        android:ems="10"
        android:hint="Enter Reason for Unavailability"
        android:inputType="textPersonName"
        android:textColorHint="#303030" />

    <Button
        android:id="@+id/buttonpostreason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/ic_postreason"
        android:fontFamily="@font/sfpro"
        android:text="Post" />

    <Button
        android:id="@+id/buttonreasoncancel"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="X"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_cancelreason"/>
</FrameLayout>